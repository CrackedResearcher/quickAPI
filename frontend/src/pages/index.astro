---
import FeaturesSection from "../components/features";
import HeroSection from "../components/hero";
import HowItWorks from "../components/howToSection";
import "../components/landing-page.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuickAPI - Blazing-fast API Mock Tool</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="max-w-6xl mx-auto px-4 py-2">
      <!-- Header -->
      <header
        class="glass flex justify-between items-center py-6 px-8 mb-8 mt-4"
      >
        <div class="flex items-center">
          <h1 class="text-2xl font-bold font-mono text-gray-900">
            Quick<span class="gradient-text">API</span>
          </h1>
        </div>
        <nav class="flex space-x-8 font-mono">
          <a
            href="/docs"
            class="text-gray-600 hover:text-gray-900 transition-colors">Docs</a
          >
          <a
            href="https://github.com/crackedresearcher/quickapi"
            class="text-gray-600 hover:text-gray-900 flex items-center transition-colors"
          >
            <span class="mr-1">Contribute</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              viewBox="0 0 16 16"
            >
              <path
                d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
              ></path>
            </svg>
          </a>

          <a
            href="https://github.com/crackedresearcher/quickapi"
            class="text-gray-600 hover:text-gray-900 flex items-center transition-colors"
          >
            <span class="mr-1">Star on Github</span>
            <svg
              class="w-4 h-4 text-yellow-500 ml-1"
              fill="currentColor"
              viewBox="0 0 16 16"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M8 .25a.75.75 0 0 1 .673.418l1.947 3.947 4.356.633a.75.75 0 0 1 .416 1.28l-3.15 3.07.743 4.337a.75.75 0 0 1-1.088.79L8 12.347l-3.897 2.058a.75.75 0 0 1-1.088-.79l.743-4.337-3.15-3.07a.75.75 0 0 1 .416-1.28l4.356-.633L7.327.668A.75.75 0 0 1 8 .25z"
              ></path>
            </svg>
          </a>

          <a
            href="mailto:ayushkv10204@gmail.com"
            class="text-gray-600 hover:text-gray-900 transition-colors"
            >Contact</a
          >
        </nav>
      </header>

      <!-- Hero Section  -->
      <HeroSection />

      <!-- Features Section -->
      <FeaturesSection />

      <!-- How It Works Section -->
      <HowItWorks />
    </div>
  </body>
</html>
